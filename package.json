{
  "name": "koa-web-kit",
  "version": "0.0.1",
  "description": "Node koa web starter kit for quick development",
  "main": "index.js",
  "scripts": {
    "start": "node server.js",
    "build": "webpack --config webpack.config.dev.js",
    "watch": "webpack --config webpack.config.dev.js --watch",
    "prod": "webpack --config webpack.config.js",
    "dev": "webpack-dev-server --hot --inline --port 3000 --config webpack.config.dev.js",
    "lint": "eslint . --ext .js --ext .jsx --cache",
    "es6-module-to-commonjs": "babel test/es6/modules -d build/test/es6/modules --plugins transform-es2015-modules-commonjs",
    "test": "mocha ./test/mocha"
  },
  "engines": {
    "node": ">= 6.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JasonBoy/koa-web-kit.git"
  },
  "keywords": [
    "koa",
    "es6",
    "webpack",
    "sass",
    "react",
    "bootstrap"
  ],
  "author": "jasonlikenfs@gmail.com",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/JasonBoy/koa-web-kit/issues"
  },
  "homepage": "https://github.com/JasonBoy/koa-web-kit#readme",
  "readme": "README.md",
  "dependencies": {
    "dot": "^1.0.3",
    "handlebars": "^4.0.5",
    "koa": "^1.2.0",
    "koa-bodyparser": "^2.0.1",
    "koa-compress": "^1.0.9",
    "koa-mount": "^1.3.0",
    "koa-router": "^5.4.0",
    "koa-session": "^3.3.1",
    "koa-static": "^2.0.0",
    "koa-views": "^4.1.0",
    "nunjucks": "^2.4.2",
    "react": "^15.0.1",
    "react-dom": "^15.0.1",
    "bootstrap": "^4.0.0-alpha.4"
  },
  "devDependencies": {
    "babel-cli": "^6.9.0",
    "babel-core": "^6.7.6",
    "babel-eslint": "^6.0.3",
    "babel-loader": "^6.2.4",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.8.0",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-react-hmre": "^1.1.1",
    "chai": "^3.5.0",
    "css-loader": "^0.23.1",
    "eslint": "^3.2.2",
    "eslint-loader": "^1.3.0",
    "eslint-plugin-react": "^6.0.0",
    "express": "^4.13.4",
    "extract-text-webpack-plugin": "^1.0.1",
    "html-loader": "^0.4.3",
    "html-webpack-plugin": "^2.15.0",
    "isomorphic-style-loader": "^1.0.0",
    "mocha": "^3.0.2",
    "node-sass": "^3.4.2",
    "sass-loader": "^4.0.0",
    "style-loader": "^0.13.1",
    "swig-loader": "^1.0.0",
    "uglify-loader": "^1.3.0",
    "webpack": "^1.13.0",
    "webpack-dev-middleware": "^1.4.0",
    "webpack-dev-server": "^1.14.1",
    "webpack-hot-middleware": "^2.9.1"
  }
}
